---
import type { Work } from "../data";

export interface Props {
  data: Work[];
}

const { data } = Astro.props;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-gray-100 mt-16"
  id="work"
>
  <h2
    class="w-[15rem] font-montserrat text-slate-900 dark:text-slate-200 underline underline-offset-4 mb-4 md:mb-0"
  >
    Work
  </h2>
  <div class="w-full flex gap-10 flex-col">
    {
      data.map((item) => (
        <div>
          <div class="flex justify-between items-center flex-wrap">
            <h3 class="text-xl font-semibold font-montserrat">{item.name}</h3>
            <p class="text-sm dark:text-gray-100">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <p class="text-sm mt-1 text-slate-500 dark:text-slate-400">
            {item.location}
          </p>
          <p
            class="mt-4 text-slate-700 dark:text-slate-200"
            set:html={item.summary}
          />
          <ul class="list-disc mt-4 list-inside">
            {item.description.map((item) => (
              <li class="text-slate-500 dark:text-slate-400" set:html={item} />
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
