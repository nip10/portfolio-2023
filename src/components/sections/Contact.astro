<section
  class="flex justify-center flex-col gap-6 items-center mt-[5rem] mb-[4rem]"
  id="contact"
>
  <h2 class="font-montserrat text-slate-900 dark:text-slate-200 text-3xl">
    What's Next?
  </h2>
  <div class="flex gap-4">
    <a
      href=`mailto:${email}`
      class="bg-transparent hover:bg-purple-500 text-purple-600 dark:text-purple-400 hover:text-white dark:hover:text-white font-semibold hover:scale-105 py-4 px-8 border border-purple-400 hover:border-purple-500 rounded transition-all duration-150 ease-in tracking-wide text-xl shadow-md"
      >Say Hello</a
    >
    <a
      href="/cv.pdf"
      target="_blank"
      rel="noopener"
      class="bg-transparent hover:bg-purple-500 text-purple-600 dark:text-purple-400 hover:text-white dark:hover:text-white font-semibold hover:scale-105 py-4 px-8 border border-purple-400 hover:border-purple-500 rounded transition-all duration-150 ease-in tracking-wide text-xl shadow-md"
      >View CV</a
    >
  </div>
</section>
