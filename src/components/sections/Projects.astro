---
import type { Project, SocialProfile } from "../../data";
import Card from "../ProjectCard.astro";

export interface Props {
  projects: Project[];
  githubUrl?: SocialProfile["url"];
}

const { projects, githubUrl } = Astro.props;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-gray-100 mt-16"
  id="projects"
>
  <h2
    class="w-[15rem] font-montserrat text-slate-900 dark:text-slate-200 underline underline-offset-4 mb-4 md:mb-0"
  >
    Projects
  </h2>
  <div class="w-full grid gap-4 grid-cols-1 grid-rows-auto md:grid-cols-2">
    {projects.map((project) => <Card project={project} />)}
    <a
      class="text-indigo-300 text-sm"
      href={githubUrl}
      target="_blank"
      rel="noopener">More projects on my GitHub.</a
    >
  </div>
</section>
