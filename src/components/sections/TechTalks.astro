---
import type { TechTalk } from "../../data";

export interface Props {
  talks: TechTalk[];
}

const { talks } = Astro.props;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-gray-100 mt-16"
  id="speaking"
>
  <h2
    class="w-[12rem] font-montserrat text-slate-900 dark:text-slate-200 underline underline-offset-4 mb-4 md:mb-0"
  >
    Speaking & Events
  </h2>
  <div class="w-full flex gap-10 flex-col">
    {
      talks.map((talk) => (
        <div class="md:pl-8 md:border-l md:border-slate-700">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
            <h3 class="text-xl font-semibold font-montserrat">{talk.title}</h3>
            <span class="text-sm text-slate-500 dark:text-slate-400">
              {talk.date}
            </span>
          </div>
          <p class="text-sm mt-1 text-slate-600 dark:text-slate-400 italic">
            {talk.event}
          </p>
          <p class="mt-2 text-slate-600 dark:text-slate-400">
            {talk.description}
          </p>
          <div class="flex flex-wrap gap-3 mt-3">
            {talk.slidesUrl && (
              <a
                href={talk.slidesUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline"
              >
                Slides
              </a>
            )}
            {talk.repoUrls?.map((url, index) => (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline"
              >
                {talk.repoUrls && talk.repoUrls.length > 1
                  ? `Repo ${index + 1}`
                  : "Repo"}
              </a>
            ))}
            {talk.linkedInUrl && (
              <a
                href={talk.linkedInUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline"
              >
                LinkedIn Post
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
